<Window x:Class="PaintWPF.Views.LoadedImageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaintWPF.Views"
        mc:Ignorable="d"
        Title="LoadedImageView" Height="450" Width="800">
    <Grid Background="White" Drop="OnDrop" AllowDrop="true">
        <Image Source="{Binding LoadedImage, Mode=TwoWay}" Width="{Binding ImageWidth}" Height="{Binding ImageHeight}" Stretch ="Uniform" Visibility="Visible" />
        <Label Content="Drop File here" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
